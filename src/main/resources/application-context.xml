<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--processor-->
    <!--user-->
    <bean id="userCreateProcessor" class="com.project.spring.process.processor.user.UserCreateProcessor"/>
    <bean id="userQueryProcessor" class="com.project.spring.process.processor.user.UserQueryProcessor"/>
    <bean id="userUpdateProcessor" class="com.project.spring.process.processor.user.UserUpdateProcessor"/>
    <bean id="userDeleteProcessor" class="com.project.spring.process.processor.user.UserDeleteProcessor"/>

    <!--session-->
    <bean id="sessionLoginProcessor" class="com.project.spring.process.processor.session.SessionLoginProcessor"/>
    <bean id="sessionLogoutProcessor" class="com.project.spring.process.processor.session.SessionLogoutProcessor"/>
    <bean id="sessionRefreshProcessor" class="com.project.spring.process.processor.session.SessionRefreshProcessor"/>
    <bean id="sessionQueryProcessor" class="com.project.spring.process.processor.session.SessionQueryProcessor"/>

    <!--friend-->
    <bean id="addFriendProcessor" class="com.project.spring.process.processor.friend.AddFriendProcessor"/>
    <bean id="acceptFriendProcessor" class="com.project.spring.process.processor.friend.AcceptFriendProcessor"/>
    <bean id="rejectFriendProcessor" class="com.project.spring.process.processor.friend.RejectFriendProcessor"/>

    <!--validator-->
    <!--user-->
    <bean id="userCreateValidator" class="com.project.spring.core.validator.impl.user.UserCreateValidator"/>
    <bean id="userQueryValidator" class="com.project.spring.core.validator.impl.user.UserQueryValidator"/>
    <bean id="userUpdateValidator" class="com.project.spring.core.validator.impl.user.UserUpdateValidator"/>
    <bean id="userDeleteValidator" class="com.project.spring.core.validator.impl.user.UserDeleteValidator"/>

    <!--session-->
    <bean id="sessionLoginValidator" class="com.project.spring.core.validator.impl.session.SessionLoginValidator"/>
    <bean id="sessionLogoutValidator" class="com.project.spring.core.validator.impl.session.SessionLogoutValidator"/>
    <bean id="sessionRefreshValidator"
          class="com.project.spring.core.validator.impl.session.SessionRefreshValidator"/>
    <bean id="sessionQueryValidator"
          class="com.project.spring.core.validator.impl.session.SessionQueryValidator"/>

    <!--friend-->
    <bean id="addFriendValidator" class="com.project.spring.core.validator.impl.friend.AddFriendValidator"/>
    <bean id="acceptFriendValidator" class="com.project.spring.core.validator.impl.friend.AcceptFriendValidator"/>
    <bean id="rejectFriendValidator" class="com.project.spring.core.validator.impl.friend.RejectFriendValidator"/>

    <bean id="facadeProcess" class="com.project.spring.process.callback.ProcessFacade">
        <property name="processors">
            <map>
                <entry key="USER_CREATE">
                    <ref bean="userCreateProcessor"/>
                </entry>
                <entry key="USER_QUERY">
                    <ref bean="userQueryProcessor"/>
                </entry>
                <entry key="USER_UPDATE">
                    <ref bean="userUpdateProcessor"/>
                </entry>
                <entry key="USER_DELETE">
                    <ref bean="userDeleteProcessor"/>
                </entry>
                <entry key="USER_LOGIN">
                    <ref bean="sessionLoginProcessor"/>
                </entry>
                <entry key="USER_LOGOUT">
                    <ref bean="sessionLogoutProcessor"/>
                </entry>
                <entry key="SESSION_REFRESH">
                    <ref bean="sessionRefreshProcessor"/>
                </entry>
                <entry key="SESSION_QUERY">
                    <ref bean="sessionQueryProcessor"/>
                </entry>
                <entry key="ADD_FRIEND">
                    <ref bean="addFriendProcessor"/>
                </entry>
                <entry key="ACCEPT_FRIEND">
                    <ref bean="acceptFriendProcessor"/>
                </entry>
                <entry key="REJECT_FRIEND">
                    <ref bean="rejectFriendProcessor"/>
                </entry>
            </map>
        </property>

        <property name="validators">
            <map>
                <entry key="USER_CREATE">
                    <ref bean="userCreateValidator"/>
                </entry>
                <entry key="USER_QUERY">
                    <ref bean="userQueryValidator"/>
                </entry>
                <entry key="USER_UPDATE">
                    <ref bean="userUpdateValidator"/>
                </entry>
                <entry key="USER_DELETE">
                    <ref bean="userDeleteValidator"/>
                </entry>
                <entry key="USER_LOGIN">
                    <ref bean="sessionLoginValidator"/>
                </entry>
                <entry key="USER_LOGOUT">
                    <ref bean="sessionLogoutValidator"/>
                </entry>
                <entry key="SESSION_REFRESH">
                    <ref bean="sessionRefreshValidator"/>
                </entry>
                <entry key="SESSION_QUERY">
                    <ref bean="sessionQueryValidator"/>
                </entry>
                <entry key="ADD_FRIEND">
                    <ref bean="addFriendValidator"/>
                </entry>
                <entry key="ACCEPT_FRIEND">
                    <ref bean="acceptFriendValidator"/>
                </entry>
                <entry key="REJECT_FRIEND">
                    <ref bean="rejectFriendValidator"/>
                </entry>
            </map>
        </property>
    </bean>
</beans>



